#!/bin/bash
# ============================================================================
# File:        virtualenvwrapper_lazyload
# Description: Lazyload virtualenvwrapper.sh because it's too slow when source
#              it in ~/.bashrc
# Author:      Near Huscarl <near.huscarl@gmail.com>
# Last Change: Wed Nov 22 04:43:47 +07 2017
# Licence:     BSD 3-Clause license
# Note:        N/A
# ============================================================================

workon() {
	unset -f ${FUNCNAME[0]}
	source /usr/bin/virtualenvwrapper.sh

	if [[ $(type -t ${FUNCNAME[0]}) != function ]]; then
		echo 'virtualenvwrapper.sh not found'
	else
		${FUNCNAME[0]}
	fi
}

mkvirtualenv() {
	unset -f ${FUNCNAME[0]}
	source /usr/bin/virtualenvwrapper.sh

	if [[ $(type -t ${FUNCNAME[0]}) != function ]]; then
		echo 'virtualenvwrapper.sh not found'
	else
		${FUNCNAME[0]} "$@"
	fi
}
