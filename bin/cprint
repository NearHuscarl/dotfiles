#!/bin/env bash

# https://stackoverflow.com/questions/5947742/how-to-change-the-output-color-of-echo-in-linux/23006365#23006365
# proof of concept for printing color

# Usage:
# source this script
# cprint 'hello world' red

function cprint() {
	# shellcheck disable=SC2059
	local text="$1" # up until last argument
	local color="$2" # last argument

	if ! [[ $color =~ ^[0-9]$ ]] ; then
		case $(echo "$color" | tr '[:upper:]' '[:lower:]') in
			0|black)
				local color=0 ;;
			1|red)
				local color=1 ;;
			2|green)
				local color=2 ;;
			3|yellow)
				local color=3 ;;
			4|blue)
				local color=4 ;;
			5|magenta)
				local color=5 ;;
			6|cyan)
				local color=6 ;;
			7|white|*)
				local color=7 ;; # white or invalid color
		esac
	fi
	tput setaf "$color"
	printf "$text"
	tput sgr0
}
